{{#each posts}}
	<div class="post">
		<div class="voting">
			<span class="score" data-post="{{this.id}}">{{this.score}}</span>
			<button class="btn-xs btn-danger up fa fa-heart"></button>
		</div>
		{{#if this.image}}
			<img class="img" src="{{this.image}}"/>
		{{else}}
			<img class="img" src="/image/bootuplogo.png"/>
		{{/if}}

		{{#if this.url}}
			<a href="{{this.url}}">{{this.title}}</a>
		{{else}}
			{{this.title}}
		{{/if}}	
		<a href="/posts/{{this.id}}" class="btn btn-warning pull-right">View Details</a>
		{{#if this.snippet}}
		<pre><code>{{this.snippet}}</code></pre>
		{{/if}}
	</div>

{{/each}}

