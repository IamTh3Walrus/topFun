<div class="panel panel-danger">
  <div class="panel-heading">
    <h2 class="panel-title">{{post.title}}</h2>
  </div>
  <div class="panel-body">
 <dl class="dl-horizontal">
  <dt><h4>Created At:</h4></dt>
  <dd>{{post.createdAt}}</dd>
</dl>
<dl class="dl-horizontal">
  <dt><h4>Image:</h4></dt>
  <dd>{{post.image}}</dd>
</dl>
<dl class="dl-horizontal">
  <dt><h4>Description:</h4></dt>
  <dd>{{post.description}}</dd>
</dl>
<dl class="dl-horizontal">
  <dt><h4>Score:</h4></dt>
  <dd>{{post.score}}</dd>
</dl>

{{#if post.snippet}}
<div>
  <pre><code>{{post.snippet}}</code></pre>  
</div>
{{/if}}

<dl class="dl-horizontal">
  <dt><h4>Url:</h4></dt>
  <dd><a href= "{{post.url}}">{{post.url}}</a></dd>
</dl>
<dl class="dl-horizontal">
  <dt><h4>Comments</h4></dt>
  <dd><form action="/{{post.id}}/comment" method="post">
  <input type="text" name="comment" value="" placeholder="Add a comment">
  <button type="submit">Submit</button>
</form></dd>
</dl>

<h1>Comments:</h1>
{{#each post.Comments}}
  <div>{{this.createdAt}} - {{this.comment}}</div>
{{/each}} 


</div>
</div>











